function [a_, z_] = forward_step_convFC(net, x)
   z = x;
   for i=1 : net.n_layers-1
       if net.layers{i}.type == 1
            a = net.weights{i} * flatten_input(z, self.layers{})
       else
            a = net.weights{i} * z + net.biases{i};
       end
       a_{i} = a;
       z = net.activations{i}(a);
       z_{i} = z;
   end
end

